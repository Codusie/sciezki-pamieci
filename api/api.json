{
    "openapi": "3.1.0",
    "info": {
        "title": "klisza.app",
        "version": "0.0.1"
    },
    "servers": [
        {
            "url": "http://localhost/api"
        }
    ],
    "paths": {
        "/landmarks": {
            "get": {
                "operationId": "landmark.index",
                "summary": "Display a listing of the resource",
                "tags": [
                    "Landmark"
                ],
                "responses": {
                    "200": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Landmark"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/landmarks/{landmark}/reels": {
            "get": {
                "operationId": "reel.index",
                "tags": [
                    "Reel"
                ],
                "parameters": [
                    {
                        "name": "landmark",
                        "in": "path",
                        "required": true,
                        "description": "The landmark ID",
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Reel"
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "$ref": "#/components/responses/ModelNotFoundException"
                    }
                }
            }
        },
        "/users": {
            "post": {
                "operationId": "user.store",
                "tags": [
                    "User"
                ],
                "responses": {
                    "200": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "access_token": {
                                            "type": "string"
                                        }
                                    },
                                    "required": [
                                        "access_token"
                                    ]
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Landmark": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "name": {
                        "type": "string"
                    },
                    "localization_name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "latitude": {
                        "type": "string"
                    },
                    "longitude": {
                        "type": "string"
                    },
                    "thumbnail_url": {
                        "type": "string"
                    },
                    "map_url": {
                        "type": "string"
                    },
                    "created_at": {
                        "type": [
                            "string",
                            "null"
                        ],
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": [
                            "string",
                            "null"
                        ],
                        "format": "date-time"
                    }
                },
                "required": [
                    "id",
                    "name",
                    "localization_name",
                    "description",
                    "latitude",
                    "longitude",
                    "thumbnail_url",
                    "map_url",
                    "created_at",
                    "updated_at"
                ],
                "title": "Landmark"
            },
            "Reel": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "media_url": {
                        "type": "string"
                    },
                    "landmark_id": {
                        "type": "integer"
                    },
                    "created_at": {
                        "type": [
                            "string",
                            "null"
                        ],
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": [
                            "string",
                            "null"
                        ],
                        "format": "date-time"
                    }
                },
                "required": [
                    "id",
                    "media_url",
                    "landmark_id",
                    "created_at",
                    "updated_at"
                ],
                "title": "Reel"
            }
        },
        "responses": {
            "ModelNotFoundException": {
                "description": "Not found",
                "content": {
                    "application/json": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "message": {
                                    "type": "string",
                                    "description": "Error overview."
                                }
                            },
                            "required": [
                                "message"
                            ]
                        }
                    }
                }
            }
        }
    }
}